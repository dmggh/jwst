#! /usr/bin/env pysh
#-*-python-*-

sauce=""
for arg in sys.argv:
    if arg.startswith("--sauce"):
       sauce = arg.split("=")[1]
       sys.argv.remove(arg)

for user in open("servers/users").readlines():
    username, first_last = user.strip().split(",")
    first_name, last_name = first_last.split(" ")
    
    % python tools/adduser.py ${username} ${username}@stsci.edu ${username}$sauce ${first_name} ${last_name} $*

