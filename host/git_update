#! /bin/tcsh -f

./clean
echo "-----------------------------------------------------------------------"
git checkout -- crds/git_version.py
echo "-----------------------------------------------------------------------"
# This works for trunk but fails for a branch or tag...  which is good.
git pull origin
echo "-----------------------------------------------------------------------"
# This works for trunk but succeeds within a branch or tag...  which is unacceptable.
# git pull upstream master
echo "-----------------------------------------------------------------------"
git status
echo "-----------------------------------------------------------------------"
git remote -v
echo "-----------------------------------------------------------------------"
git branch -v
echo "-----------------------------------------------------------------------"
git tag -v
echo "-----------------------------------------------------------------------"
git diff
echo "-----------------------------------------------------------------------"
