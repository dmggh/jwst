#! /bin/csh

cd ${CRDS}/CRDS_server
source env.csh

setenv TAIL ${CRDS_PROJECT}.${CRDS_USECASE}
setenv ETAIL ${TAIL}.err

echo "==========================================================="
echo "Running Processes and System status"
echo "==========================================================="
echo "Running Processes"
echo "-----------------------------------------------------------"
ps ax

echo "-----------------------------------------------------------"
echo '$CRDS_PATH listing'
echo "-----------------------------------------------------------"
ls $CRDS_PATH

echo "-----------------------------------------------------------"
echo '$CRDS listing'
echo "-----------------------------------------------------------"
ls $CRDS

echo "-----------------------------------------------------------"
echo '$HOME listing'
echo "-----------------------------------------------------------"
ls $HOME

echo "-----------------------------------------------------------"
echo "Mounts"
echo "-----------------------------------------------------------"
mount

echo "-----------------------------------------------------------"
echo "Disk Space Used /crds/data1"
echo "-----------------------------------------------------------"
du -h -c --max-depth 2 /crds/data1

echo "-----------------------------------------------------------"
echo "Disk Space Used /ifs/crds"
echo "-----------------------------------------------------------"
du -h -c --max-depth 3 /ifs/crds/${CRDS_PROJECT}/${CRDS_USECASE}

echo "-----------------------------------------------------------"
echo "Disk Space Used $HOME"
echo "-----------------------------------------------------------"
du -h -c --max-depth 3 $HOME

echo "-----------------------------------------------------------"
echo "Disk Space Free"
echo "-----------------------------------------------------------"
df -h

echo "-----------------------------------------------------------"
echo "Network"
echo "-----------------------------------------------------------"
/sbin/ifconfig

echo "==========================================================="
echo "CRDS config"
echo "==========================================================="
python -m crds.list --config

