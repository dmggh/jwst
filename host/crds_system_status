#! /bin/csh

source ${HOME}/.setenv

setenv TAIL ${CRDS_PROJECT}.${CRDS_USECASE}
setenv ETAIL ${TAIL}.err

echo "==========================================================="
echo "Running Processes and System status"
echo "==========================================================="
echo "Running Processes"
echo "-----------------------------------------------------------"
ps ax

echo "-----------------------------------------------------------"
echo '$CRDS_PATH listing'
echo "-----------------------------------------------------------"
ls $CRDS_PATH

echo "-----------------------------------------------------------"
echo '$CRDS_PERSISTENT_LOCAL listing'
echo "-----------------------------------------------------------"
ls $CRDS_PERSISTENT_LOCAL

echo "-----------------------------------------------------------"
echo '$CRDS_VOLATILE_LOCAL listing'
echo "-----------------------------------------------------------"
ls $CRDS_VOLATILE_LOCAL

echo "-----------------------------------------------------------"
echo '$HOME listing'
echo "-----------------------------------------------------------"
ls $HOME

echo "-----------------------------------------------------------"
echo "Mounts"
echo "-----------------------------------------------------------"
mount

echo "-----------------------------------------------------------"
echo "Disk Space Used ${CRDS_ROOT}"
echo "-----------------------------------------------------------"
# nominally /crds/data1
du -h -c --max-depth 2 ${CRDS_ROOT}

echo "-----------------------------------------------------------"
echo "Disk Space Used ${CRDS_ISILON}"
echo "-----------------------------------------------------------"
# /ifs/crds/${CRDS_PROJECT}/${CRDS_USECASE}
du -h -c --max-depth 3 ${CRDS_ISILON}

echo "-----------------------------------------------------------"
echo "Disk Space Used /grp/crds/${CRDS_PROJECT}"
echo "-----------------------------------------------------------"
du -h -c --max-depth 3 /grp/crds/${CRDS_PROJECT}

echo "-----------------------------------------------------------"
echo "Disk Space Used $HOME"
echo "-----------------------------------------------------------"
du -h -c --max-depth 1 $HOME

echo "-----------------------------------------------------------"
echo "Disk Space Free"
echo "-----------------------------------------------------------"
df -h

echo "-----------------------------------------------------------"
echo "Network"
echo "-----------------------------------------------------------"
/sbin/ifconfig

echo "==========================================================="
echo "CRDS config"
echo "==========================================================="
python -m crds.list --config --readonly-cache
