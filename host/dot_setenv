setenv  CRDS_SERVER `uname -n | cut -d'.' -f1`

# CRDS and CRDS_STACK,  same pattern,  different dirs,  override below as needed
setenv CRDS ${HOME}/${CRDS_SERVER}
setenv CRDS_STACK ${CRDS}/crds_stacks/crds_10

switch ($CRDS_SERVER)
       case dljwstcrdsv1:
            setenv CRDS_PROJECT jwst
            setenv CRDS_USECASE dev
       breaksw
       case tljwstcrdsv1:
            setenv CRDS_PROJECT jwst
	    setenv CRDS_USECASE test
       breaksw
       case pljwstcrdsv1:
            setenv CRDS_PROJECT jwst
	    setenv CRDS_USECASE prod
       breaksw
       case dlhstcrdsv1:
            setenv CRDS_PROJECT hst
	    setenv CRDS_USECASE dev
       breaksw
       case tlhstcrdsv1:
            setenv CRDS_PROJECT hst
	    setenv CRDS_USECASE test
       breaksw
       case plhstcrdsv1:
            setenv CRDS_PROJECT hst
	    setenv CRDS_USECASE prod
       breaksw
endsw

setenv PATH ${CRDS}/CRDS_server/host:${CRDS_STACK}/bin:/usr/stsci/Python-2.7.4/bin:/usr/kerberos/bin:/usr/local/bin:/bin:/usr/bin:/usr/X11R6/bin

setenv LD_LIBRARY_PATH ${CRDS_STACK}/lib:/usr/stsci/Python-2.7.4/lib

if ! $?PYTHONPATH then
    setenv PYTHONPATH ${CRDS_STACK}/lib/python
else
    setenv PYTHONPATH ${PYTHONPATH}:${CRDS_STACK}/lib/python    
endif

setenv apachemod ${CRDS_STACK}/lib/apache/

setenv EDITOR emacs

# printenv | grep CRDS

